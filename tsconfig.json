{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ES2022", "DOM"],
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": false,
		"types": ["node"]
	},
	"include": ["src", "scripts", "playwright.config.ts"],
	"exclude": ["node_modules", "dist", "pix-dupe-detect-main/**"]
}